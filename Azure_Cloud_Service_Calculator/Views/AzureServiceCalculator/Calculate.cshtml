@model Azure_Cloud_Service_Calculator.Models.AzureServiceCalculator

@{
    ViewBag.Title = "Calculate";
}

<h2>Calculate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AzureServiceCalculator</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NoOfInstances, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.NoOfInstances, new { htmlAttributes = new { @class = "form-control" } })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.NoOfInstances, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InstanceSize, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InstanceSize")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calculate" class="btn btn-default" />
            </div>
        </div>
    </div>
}

